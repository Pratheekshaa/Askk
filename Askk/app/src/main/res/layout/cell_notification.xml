<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:app="http://schemas.android.com/apk/res-auto"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/cnotAvatarImg"
        android:src="@drawable/default_avatar"
        android:layout_marginTop="10dp"
        android:layout_marginStart="10dp"
        android:layout_width="44dp"
        android:layout_height="44dp"/>

    <TextView
        android:id="@+id/cnotFullnameTxt"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignTop="@id/cnotAvatarImg"
        android:layout_marginStart="10dp"
        android:layout_marginEnd="44dp"
        android:layout_toEndOf="@id/cnotAvatarImg"
        android:text="•••"
        android:textColor="#000"
        android:textSize="12sp"
        android:textStyle="bold"/>

    <TextView
        android:id="@+id/cnotNotificationtxt"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/cnotFullnameTxt"
        android:layout_marginStart="10dp"
        android:layout_marginTop="2dp"
        android:layout_marginEnd="44dp"
        android:layout_marginBottom="20dp"
        android:layout_toEndOf="@id/cnotAvatarImg"
        android:maxLines="2"
        android:text="•••"
        android:textColor="#555"
        android:textSize="10sp"/>

    <ImageView
        android:id="@+id/cnotDisclouseIndicator"
        android:layout_width="38dp"
        android:layout_height="38dp"
        android:layout_alignTop="@+id/cnotAvatarImg"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="0dp"
        android:alpha="0.7"
        app:srcCompat="@drawable/disclosure_indicator"/>
</RelativeLayout>